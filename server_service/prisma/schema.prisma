generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PrivacityServer {
  PUBLIC
  PRIVATE
}

model Servers {
  id        String          @id @default(uuid())
  name      String
  avatarURL String
  privacity PrivacityServer
  createdAt DateTime        @default(now())
  tags      Tags[]          @relation("ServerTags")
  events    Event[]         @relation("ServerEvents")
  members   ServerMembers[] @relation("ServerMemberships")
}

model Event {
  id          String   @id @default(uuid())
  name        String
  description String
  date        DateTime
  serverId    String
  server      Servers  @relation("ServerEvents", fields: [serverId], references: [id])
}

model Categories {
  id   String @id @default(uuid())
  name String
}

model Tags {
  id      String    @id @default(uuid())
  name    String
  servers Servers[] @relation("ServerTags")
}

model ServerMembers {
  id        String   @id @default(uuid())
  id_user   String
  id_server String
  role      String
  joinedAt  DateTime @default(now())
  serverId  String
  server    Servers  @relation("ServerMemberships", fields: [serverId], references: [id])
}
